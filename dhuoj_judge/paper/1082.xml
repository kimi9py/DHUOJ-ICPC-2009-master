  &lt;td style='padding:.75pt .75pt .75pt .75pt'&gt;
  &lt;p class=MsoNormal&gt;&lt;span lang=EN-US&gt;1000&lt;/span&gt;&lt;span lang=EN-US
  style='font-size:12.0pt;font-family:SimSun;mso-bidi-font-family:SimSun'&gt;&lt;o:p&gt;&lt;/o:p&gt;&lt;/span&gt;&lt;/p&gt;
  &lt;/td&gt;
